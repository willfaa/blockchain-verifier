{
  "compilerOptions": {
    // Folder sumber dan hasil build
    "rootDir": "./src",
    "outDir": "./dist",

    // Target environment Node.js biasa
    "target": "ES2020",
    "module": "commonjs",

    // Untuk bisa import express, cors, dll dengan syntax import default
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Type bawaan Node
    "types": ["node"],

    // Type checking
    "strict": true,
    "skipLibCheck": true,

    // Source map kalau nanti mau debug
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
